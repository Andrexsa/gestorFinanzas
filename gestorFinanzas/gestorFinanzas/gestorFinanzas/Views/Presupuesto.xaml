<Window x:Class="gestorFinanzas.Views.Presupuesto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Presupuesto" Height="750" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" Background="White" >
            <TextBlock Text="Presupuesto" FontSize="20" FontWeight="ExtraBlack" VerticalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="10">
            <Label Content="Buscar Presupuesto:" VerticalAlignment="Center"/>
            <TextBox Width="146" Margin="5,0,0,0" Height="51"/>
            <Button Content="Mostrar" Margin="10,0,0,0" Padding="10,5" Background="#FF4CAF50" Foreground="White" Width="109" Height="35"/>
            <Label Content="Añadir Presupuesto:" VerticalAlignment="Center"/>
            <Button Content="Añadir" Padding="10,5" Background="#FF4CAF50" Foreground="White" Width="109" Height="35"/>
        </StackPanel>

        <DataGrid Grid.Row="2" Margin="10" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Código" Width="Auto"/>
                <DataGridTextColumn Header="Descripción del Presupuesto" Width="*"/>

                <DataGridTextColumn Header="Precio" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <CheckBox Content="Seleccionar Varios" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
            <Label Content="Total:" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold"/>
            <TextBlock Text="$ 5.085.600" Grid.Row="1" Grid.Column="2" FontWeight="Bold"/>
            <Label Content="Total C/Desc.:" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" FontWeight="Bold"/>
            <TextBlock Text="$ 4.831.320" Grid.Row="2" Grid.Column="2" FontWeight="Bold"/>
        </Grid>

        <Border Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10"/>

        <Border Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" BorderBrush="Gray" BorderThickness="1" Margin="10" Padding="10">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Cantidad:" Width="80"/>
                    <TextBox Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Descuento %:" Width="80"/>
                    <TextBox Width="80"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <Label Content="Valor Desc.:" Width="80"/>
                    <TextBlock Text="$ 254.280" FontWeight="Bold"/>
                </StackPanel>
                <Button Content="Imprimir" Margin="0,10,0,0" Padding="10,5" Background="#FF4CAF50" BorderBrush="White" Foreground="White"/>
                <Button Content="Gen. PDF" Margin="0,5,0,0" Padding="10,5" Background="#FF4CAF50" Foreground="White"/>
                <Button Content="Guardar" Margin="0,5,0,0" Padding="10,5" Background="#FF4CAF50" Foreground="White"/>
                <Button Content="Limpiar" Margin="0,5,0,0" Padding="10,5" Background="#FF4CAF50" Foreground="White"/>
                <Button Content="Finalizar" Margin="0,5,0,0" Padding="10,5" Background="#FF4CAF50" Foreground="White"/>

                <Button Content="Volver" Margin="0,170,0,0" Padding="10,5" Background="#FFFF0B0B" Foreground="White" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
